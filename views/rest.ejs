<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="bulma.min.css">
	<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The List Of rests</title>
</head>
<body>
	<section class="section">
		<div class="maincolumns columns is-desktop is-vcentered">
			<div class="column is-10 is-offset-1 notification is-info is-light box container">
				<div class="title">
					Web Users
				</div>
				<% if (locals.result) { %>
					<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
								<tr>
									<th> restaurant Name </th>
									<th> Review </th>
									<th> &nbsp; </th>
								</tr>
							</thead>
							<% let i=0; %>
								<% for(i=0; i < result.length; i++) { %>
									<tr>
										<td>
											<%= result[i].name %>
										</td>
										<td>
											<%= result[i].description %>
										</td>
										<td><a href="/restaurant/deleteRest/<%= result[i].restaurant_id %>">
												<span class="icon is-small">
													<i class="fas fa-user-times"></i>
												</span></a>
										</td>
                                        <td><a href="/review/<%= result[i].restaurant_id %>">
                                            <span class="icon is-small">
                                                <i class="fas fa-star"></i> 
                                            </span></a>
                                    </td>
									</tr>
									<% } %>
										<tfoot>
											<tr>
												<td colspan="4">
													There are <%= i %> Restaurants.
												</td>
											</tr>
										</tfoot>
						</table>
					</div>
					<% } %>
			</div>
		</div>
	</section>
	<form action="addRestaurant" method="post">
		<div class="field is-horizontal">
			<div class="field-label is-normal">
				<label class="label">Add New restaurant</label>
			</div>
			<div class="field-body">
				<div class="field">
					<p class="control is-expanded">
						<input name="name" class="input" type="text" placeholder="Restaurant Name">
					</p>
				</div>
				<div class="field">
					<p class="control is-expanded">
						<input name="description" class="input" type="text" placeholder="Description">
					</p>
				</div>
				<div class="field">
					<button class="button is-link">
						<span>Add</span>
						<span class="icon is-small">
							<i class="fas fa-user-plus"></i>
						</span>
					</button>
				</div>
			</div>
		</div>
	</form>
</body>

</body>
</html>